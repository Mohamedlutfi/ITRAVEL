<div class="bodyy">
    <div class="bodyg">
<div class="gallery-page">
    <div class="gallery-header">
        <h1 class="margintop">Gallery</h1>
        <p class="textshadow">Browse memories uploaded by the community.</p>
    </div>
    <div class="gallery-grid" id="gallery-grid">
        <!-- Cards will be populated by public/js/gallary.js -->
    </div>

    <!-- Pagination controls -->
    <div class="pagination-container" id="pagination-container" style="display: none;">
        <div class="pagination">
            <button id="prev-btn" class="pagination-btn" disabled>« Previous</button>
            <div class="pagination-numbers" id="pagination-numbers">
                <!-- Page numbers will be populated by JavaScript -->
            </div>
            <button id="next-btn" class="pagination-btn" disabled>Next »</button>
        </div>
        <div class="pagination-info" id="pagination-info">
            <!-- Pagination info will be populated by JavaScript -->
        </div>
    </div>

    <!-- Lightbox modal -->
    <div id="gallery-lightbox" class="gallery-lightbox" aria-hidden="true">
        <div class="lb-backdrop"></div>
        <div class="lb-content">
            <button class="lb-close" aria-label="Close">×</button>
            <img id="lb-img" src="" alt="" />
            <div class="lb-meta">
                <h3 id="lb-title"></h3>
                <p id="lb-desc"></p>
                <small id="lb-user"></small>
            </div>
        </div>
    </div>

    
    <script src="/js/gallary.js"></script>
</div>
</div>
</div>